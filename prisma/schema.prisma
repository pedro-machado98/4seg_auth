generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String @unique
  hash String

  nome String?
  email String
  IPAutorizado String
  loginErrado Boolean @default(false)
  codigoValidador Int? 

  role String
  
  @@map("users")
}

model Aluno {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}

